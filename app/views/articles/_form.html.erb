<div class="container">
  <% if @article.errors.any? %>
    <h2>The article could not be saved because of</h2>
    <ul>
    <% @article.errors.full_messages.each do |err| %>
    <li><%= err %></li>
    <% end %>
    </ul>
  <% end %>
  <div class="row justify-content-center">
  <div class="col-10">
  <%= form_with(model: @article, local: true) do |f| %>
    <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label" %>
      <div class="col-10">
        <%= f.text_area :description, rows: 10, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <%= f.submit class: "btn btn-outline-dark btn-lg"%>
    </div>
  <% end %> 
  </div>
  <%= link_to 'Cancel and Return to Articles Listing' , articles_path, class:"btn btn-outline-secondary btn-lg" %>
  </div>
</div>